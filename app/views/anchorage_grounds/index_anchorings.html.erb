<% content_for :header do %>
  <h1>Anchorage Grounds</h1>
<% end %>

<% @anchorage_grounds.each_with_index do |anchorage_ground, i| %>
<div class="anchorage_ground">
  <h2><%= anchorage_ground.name %></h2>
  <ul class="nav nav-tabs">
    <li class="active"><a href="#anchor<%= i%>">Anchor</a></li>
    <li><a href="#sail<%= i%>">Sail</a></li>
  </ul>

  <div class="tab-content">
    <div id="anchor<%= i%>" class="tab-pane fade active in">
      <table class="table table-hover">
	<thead>
  	  <tr>
  	    <th>#</th>
  	    <th>Ship Name</th>
  	  </tr>
  	</thead>

	<tbody>
        <% anchorage_ground.anchorings.confirmed.each_with_index do |anchoring, i| %>
	  <tr>
	    <td><%= i+1 %>
	    <td><%= link_to anchoring.ship_name, edit_anchoring_path(anchoring) %></td>
          </tr>
        <% end %>
	</tbody>
      </table>
    </div>

    <div id="sail<%= i%>" class="tab-pane fade in">
      <table class="table table-hover">
	<thead>
  	  <tr>
  	    <th>#</th>
  	    <th>Ship Name</th>
  	  </tr>
  	</thead>

	<tbody>
        <% anchorage_ground.anchorings.anchored.each_with_index do |anchoring, i| %>
	  <tr>
	    <td><%= i+1 %>
	    <td><%= link_to anchoring.ship_name, edit_anchoring_path(anchoring) %></td>
          </tr>
        <% end %>
	</tbody>
      </table>
    </div>
  </div>  
</div>
<% end %>

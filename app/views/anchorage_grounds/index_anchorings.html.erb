<h1>Anchorage Grounds</h1>
<% @anchorage_grounds.each do |anchorage_ground| %>
<div>
  <h2><%= anchorage_ground.name %></h2>

  <div>
    <h3>Anchor</h3>
    <table>
      <% anchorage_ground.anchorings.confirmed.each do |anchoring| %>
      <tr>
	<td><%= link_to anchoring.ship_name, edit_anchoring_path(anchoring) %></td>
      </tr>
      <% end %>
    </table>
  </div>

  <div>
    <h3>Sail</h3>
    <table>
      <% anchorage_ground.anchorings.anchored.each do |anchoring| %>
      <tr>
	<td><%= link_to anchoring.ship_name, edit_anchoring_path(anchoring) %></td>
      </tr>
      <% end %>
    </table>
  </div>

</div>
<% end %>

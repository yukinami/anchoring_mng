<% content_for :header do %>
<h1><%= t('.listing_users') %></h1>
<% end %>

<table class="table">
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.hashed_password') %></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.hashed_password %></td>
    <td><%= link_to t('.show'), user, class: "btn btn-primary" %>
    <%= link_to t('.edit'), edit_user_path(user), class: "btn btn-primary" %>
    <%= link_to t('.destory'), user, class: "btn btn-primary", method: :delete, data: { confirm: t('.are_you_sure') } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('.new_user'), new_user_path, class: "btn btn-default" %>

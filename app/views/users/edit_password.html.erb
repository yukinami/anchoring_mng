<% content_for :header do %>
<h1><%= t('.change_password') %></h1>
<% end %>

<div class="anchoring_form">

  <%= form_for @user, url:update_password_user_path(@user),:html => {class: "", role:"from"} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template.header', :count => @user.errors.size, :model => t('activerecord.models.user')) %>
      </h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :old_password, t('.old_password') %>
    <%= password_field_tag :old_password, nil, :size => 40, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, :size => 40, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :size => 40, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit t('.change'), :class => "btn" %>
  </div>

<% end %>

</div>


<!DOCTYPE html>
<html>
<head>
  <title>AnchoringMng</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "signin", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
    <% end %>
  
    <%= form_tag login_path, :class=> "form-signin" do %>
    <h2 class="form-signin-heading"><%= t '.please_signin' %> </h2>
      <%= text_field_tag :name, flash[:name], class: 'form-control', placeholder: 'Username', required: true, autofocus: true %>
      <%= password_field_tag :password, nil, class: 'form-control' , placeholder: 'Password', required: true %>
      <%= button_tag t('.signin'), class: "btn btn-lg btn-primary btn-block", type: "submit" %>
    <% end %>
  </div>
</body>
</html>
